---
export type Props = { id: string };

const { id } = Astro.props;
---

<a
  id={id}
  class:list={[
    "relative group",
    "no-underline hover:cursor-pointer hover:underline hover:underline-offset-2",
  ]}
>
  <div class:list={["absolute -left-5", "opacity-0 group-hover:opacity-100"]}>
    #
  </div>
  <slot />
</a>
