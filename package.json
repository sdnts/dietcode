{
  "scripts": {
    "dev": "NODE_ENV=development remix build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -i ./app/_styles.css -o app/styles.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public",
    "build": "NODE_ENV=production run-s build:css build:remix",
    "build:css": "tailwindcss -m -i ./app/_styles.css -o app/styles.css",
    "build:remix": "remix build",
    "types": "tsc --noEmit",
    "format": "prettier --ignore-path=.gitignore -c . \"!.yarn/**\" \"!**/*styles.css\""
  },
  "dependencies": {
    "@remix-run/cloudflare": "1.7.5",
    "@remix-run/cloudflare-pages": "1.7.5",
    "@remix-run/react": "1.7.5",
    "clsx": "1.2.1",
    "phosphor-react": "1.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.14.1",
    "@radix-ui/colors": "0.1.8",
    "@remix-run/dev": "1.7.5",
    "@tailwindcss/typography": "0.5.8",
    "@types/react": "17.0.47",
    "@types/react-dom": "17.0.17",
    "autoprefixer": "10.4.13",
    "concurrently": "7.5.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.19",
    "prettier": "2.7.1",
    "rehype-highlight": "6.0.0",
    "tailwindcss": "3.2.4",
    "typescript": "4.7.4",
    "wrangler": "2.0.27"
  },
  "engines": {
    "node": ">=16.13"
  },
  "packageManager": "yarn@3.2.4",
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "printWidth": 80
  }
}
